{
    "manifest_version": 3,
    "name": "Kahoot Agent",
    "version": "1.0",
    "description": "Automated Kahoot question answering assistant",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "https://kahoot.it/*",
        "https://*.kahoot.it/*",
        "https://play.kahoot.it/*"
    ],
    "action": {
        "default_title": "Kahoot Agent"
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://kahoot.it/*",
                "https://*.kahoot.it/*",
                "https://play.kahoot.it/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "answer_searcher.js"
            ],
            "matches": [
                "https://kahoot.it/*",
                "https://*.kahoot.it/*",
                "https://play.kahoot.it/*"
            ]
        }
    ]
}